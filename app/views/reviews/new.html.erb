<div class="container">
  <h1>New review for </h1>
  <%= form_with(model: @review, local: true) do |f| %>

  <%= f.hidden_field :restaurant_id, value: params[:restaurant_id] %>

  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, options_for_select([
      ["1 star", 1.0],
      ["2 stars", 2.0],
      ["3 stars", 3.0],
      ["4 stars", 4.0],
      ["5 stars", 5.0]
      ]), class: 'form-control mb-2' %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <div class="form-group">
      <%= f.label :tag_list, "Keywords (separated by commas)" %>
      <%= f.text_field :tag_list %>
    </div>

    <div class="form-group">
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true %>
    </div>

    <%= f.submit "Post review" %>
  <% end %>
</div>
